#!/usr/bin/env sh

# Set up app. Run this script immediately after cloning the codebase.

# Set up configurable environment variables
if [ ! -f .env ]; then
  cp .sample.env .env
fi

# Create database tables
psql -c 'create database user_service_development;'
psql -c 'create database user_service_test;'

# Run goose migrations
(cd user_service; goose -env=development up)
(cd user_service; goose -env=test up)
